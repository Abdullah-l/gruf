#!/usr/bin/env ruby
rails_env = File.expand_path('../../config/environment', __FILE__)
if File.exists?(rails_env)
  require rails_env
else
  require 'rubygems'
  require 'bundler'
  Bundler.setup
end
require 'gruf'

begin
  server = Gruf::Server.new
  server.start!
rescue => e
  puts e.message
  puts e.backtrace.join("\n")
end
